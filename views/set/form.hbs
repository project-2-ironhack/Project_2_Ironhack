
    <div class="container">
    <form action="dashboard" method="POST">

    <h5>Configuraciones de busquedas</h5>
    <div class="form-group">
      <label>Zip Code</label>
      <select name="maingraph" class="form-control">
        <option value="" disabled selected>Seleccionar un código postal</option>
        {{#each zipCodes as |zc|}}
          <option value="{{zc}}">
            {{zc}}
          </option>
        {{/each}}     
      </select>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="form-group col-6">
          <label>Fecha mínimca <small>en meses</small></label>
          <input type="text" class="form-control" name="graphs[0]graph[info][y][min_date]">
        </div>

        <div class="form-group col-6">
          <label>Fecha máxima <small>en meses</small></label>
          <input type="text" class="form-control" name="graphs[0]graph[info][y][max_date]">
        </div>
      </div>
    </div>
    <div class="form-group">
      <label>Establecimiento</label>
      <select name="maingraph" class="form-control">
          <option value="" disabled selected>Seleccionar un gráfico</option>
        {{#each kinds as |kind|}}
          <option value="{{kind}}">
            {{kind}}
          </option>
        {{/each}} 
      </select>
    </div>
    <hr>
    <div class="form-group">
      <h5>Primera Gráfica</h5>
      <label>Tipo de gráfico</label>
      <select name="graphs[0]graph[type]" class="form-control">
          <option value="" disabled selected>Seleccionar un gráfico</option>
        {{#each Graph as |graph|}}
          <option value="{{graph}}">
            {{graph}}
          </option>
        {{/each}} 
      </select>
    </div>
    

    <div class="d-flex">
      <button type="submit" class="btn btn-primary mr-3">Submit</button>
      <a class="btn btn-secondary" href="/places">Back</a>
    </div>
  </form>
  </div>


