
    <div>
    <form action="set" method="POST">

    <div class="form-group">
      <label>Zip Code</label>
      <input type="text" class="form-control" name="zip_code" value="">
    </div>


    <div class="form-group">
      <label>Min date</label>
      <input type="text" class="form-control" name="min_date">
    </div>

    <div class="form-group">
      <label>Max date</label>
      <input type="text" class="form-control" name="max_date">
    </div>

    <div class="form-group">
      <label>Main Category</label>

      <select name="mainCategory" class="form-control">
        {{#each categories as |category|}}
          <option value="{{category}}">
          {{!-- {{#isMainCategory ../book category }}selected{{/isMainCategory}}> --}}
            {{category}}
          </option>
        {{/each}} 
      </select>
    </div>
    <div class="d-flex">
      <button type="submit" class="btn btn-primary mr-3">Submit</button>
      <a class="btn btn-secondary" href="/places">Back</a>
    </div>
  </form>
  </div>