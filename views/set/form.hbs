    <div class="main-set-container row">
    <div class="float-left form-container">
      <form action="set" method="POST">
      <h5>Configuraciones de busquedas</h5>
        <div class="form-group">
          <label>Zip Code</label>
          <select name="config[zipCode]" class="form-control">
            <option value="28004" disabled selected>Seleccionar un código postal</option>
            {{#each zipCodes as |zc|}}
              <option value="{{zc}}">
                {{zc}}
              </option>
            {{/each}}     
          </select>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="form-group col-6">
              <label>Fecha mínimca <small>en meses</small></label>
              <input type="text" value='01' class="form-control" name="config[min_date]" placeholder="01" min="0set1" max="12">
            </div>

            <div class="form-group col-6">
              <label>Fecha máxima <small>en meses</small></label>
              <input type="text" value='12' class="form-controsetl" name="config[max_date]" placeholder="12" min="0set1" max="12">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label>Establecimiento</label>
          <select name="config[type]" class="form-control">
              <option value="" disabled selected>Seleccionar un gráfico</option>
            {{#each types as |type|}}
              <option value="{{type.bbva}}">
                {{type.charter}}
              </option>
            {{/each}} 
          </select>
        </div>
        <hr>
        <div class="form-group">
          <h5>Gráficas de interes</h5>
          <label>Tipo de gráfico</label>
          <div class='row'>
            {{#each categories as |graph|}}
             <div class="card mb-4 py-3 border-bottom-primary col-6">
                <div class="card-body charts-options form-check row ">
                    <i class="fas {{graph.fa}} "></i>
                    <label for="graph-{{graph.name}}" class="form-check-label p-0">{{graph.displayName}}</label>
                    <input id="graph-{{graph.name}}" name="graph[type]" class="form-check-input"
                      type="checkbox" value="{{graph.name}}" > 
                </div>
              </div>
            {{/each}}
          </div>

        </div>

        <div class="d-flex">
          <button type="submit" class="btn btn-primary mr-3">Submit</button>
          {{!-- <a class="btn btn-secondary" href="/places">Back</a> --}}
        </div>
      </form>
    </div>
    <div class="float-left right-img">
    </div>
  </div>
